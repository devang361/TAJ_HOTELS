<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link rel="stylesheet" href="style.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Aclonica&display=swap" />
    <style>
        .image-container {
            position: relative;
        }

        .romen {
            font-family: "Times New Roman", Times, serif !important;
        }


        .card-body {
            padding: 3px; /* Adjust the padding as needed */
        }


        .dark-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent black overlay */
        }

        .centered-text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: white; /* Text color */
        }

            .centered-text h1 {
                font-family: 'Aclonica', sans-serif; /* Use Aclonica font */
                font-size: 92px; /* Adjust the font size as needed */
            }

        .card-body h2 {
            font-family: 'Aclonica', sans-serif; /* Use Aclonica font */
            font-size: 92px; /* Adjust the font size as needed */
        }

        .dark-blue-bg {
            background-color: #003366;
            color: white;
        }

        .book-now-btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #ffecb3; /* Cream color */
            color: #333; /* Text color */
            text-decoration: none;
            font-size: 18px;
            margin-top: 20px;
            border-radius: 5px;
        }

            .book-now-btn:hover {
                background-color: #ffe066; /* Lighter cream color on hover */
            }


        .navbar {
            position: absolute;
            top: 20px; /* Adjust as needed */
            right: 20px; /* Adjust as needed */
        }

            .navbar ul {
                list-style-type: none;
                padding: 0;
            }

                .navbar ul li {
                    display: inline;
                    margin-right: 20px;
                }

                    .navbar ul li:last-child {
                        margin-right: 0;
                    }

                    .navbar ul li a {
                        color: white;
                        text-decoration: none;
                    }

        /*facilities*/
        .centered-text-facillities {
            position: absolute;
            bottom: 50%; /* Position at the bottom */
            left: 50%;
            transform: translate(-50%, 50%); /* Center horizontally and move up by 50% of the text height */
            text-align: center;
            color: white;
            width: 100%;
        }
        /* login sign up */

    </style>
</head>
<body>
    <div class="image-container">
        <img src="~/images/hotel_taj.jpg" alt="Your Image" width="1520" height="700" />
        <div class="content">
            <div class="dark-overlay">
                <div class="centered-text">
                    <h2>WELCOME TO</h2>
                    <h1>taj</h1>
                    <h2>HOTELS</h2>
                    <h6>Book your stay and enjoy Luxury redefined at the most affordable rates.</h6>
                    <br /><br />
                    <a href="@Url.Action("taj_customer_info", "Home")" class="book-now-btn">Book Now</a><br /><br />
                    <div class="scrolling-text">
                        <p>Scroll</p>
                    </div>

                    <div class="scrolling-image-container">
                        <img src="~/images/scroll.jpg" alt="Scrolling Image" width="45" />
                    </div>
                </div>
            </div>

            <nav class="navbar">
                <ul>
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li><a href="@Url.Action("Contact", "Home")">Facilities</a></li>
                    <li><a href="@Url.Action("About", "Home")">Room</a></li>
                    <li><a href="@Url.Action("Index", "taj_customer_info")">Book Room</a></li>


                </ul>
            </nav>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <footer class="dark-blue-bg">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h6>Contact</h6>
                    <p>123 Street, City</p>
                    <p>Phone: 123-456-7890</p>
                </div>
                <div class="col-md-4">
                    <h6>Follow Us</h6>
                    <div class="social-media-icons">
                        <img src="~/images/facebook.png" alt="Facebook" width="20" />
                        Facebook<br />
                        <img src="~/images/instagram.png" alt="Instagram" width="20" />
                        Instagram<br />
                        <img src="~/images/twitter.png" alt="Twitter" width="20" />
                        Twitter<br />
                    </div>
                </div>
                <div class="col-md-4">
                    <h6>Email</h6>
                    <p>Hoteltaj@gmail.com</p>
                </div>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
